{
  "name": "ssh-manager",
  "version": "0.1.2",
  "description": "A cross-platform GUI application for managing SSH configurations through organized folders and visual forms",
  "main": "src/main.js",
  "bin": {
    "ssh-manager": "./bin/ssh-manager.js"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "test": "jest",
    "lint": "eslint src/",
    "create-shortcut": "node bin/ssh-manager.js create-shortcut",
    "postinstall": "node scripts/postinstall.js",
    "preuninstall": "node scripts/preuninstall.js",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl",
    "pack": "npm run build && npm pack",
    "distribute": "npm run build && npm run pack"
  },
  "keywords": [
    "ssh",
    "configuration",
    "management",
    "network",
    "electron",
    "desktop"
  ],
  "author": "Jeremy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/isriam/ssh_manager.git"
  },
  "bugs": {
    "url": "https://github.com/isriam/ssh_manager/issues"
  },
  "homepage": "https://github.com/isriam/ssh_manager#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "preferGlobal": true,
  "dependencies": {
    "ssh-config": "^4.1.6",
    "fs-extra": "^11.1.1",
    "commander": "^11.1.0",
    "node-ssh": "^13.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.50.0",
    "jest": "^29.7.0"
  },
  "build": {
    "appId": "com.ssh-manager.app",
    "productName": "SSH Manager",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "src/**/*",
      "assets/templates/**/*",
      "bin/**/*",
      "package.json",
      "!src/**/*.{js.map,ts}",
      "!assets/icons/build/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/templates",
        "to": "templates"
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icons/icon.icns",
      "target": [
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "gatekeeperAssess": false,
      "hardenedRuntime": true,
      "darkModeSupport": true,
      "type": "distribution"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "assets/icons/icon.icns",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      },
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icons/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icons/icon.png",
      "category": "Network"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "${productName}"
    },
    "publish": null
  }
}